  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "ts-node src/infra/server.ts",
    "dev": "ts-node-dev src/infra/server.ts",
    "prepare": "husky install",
    "orm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "migrations": "yarn orm migration:run",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:watch": "yarn test -- --watch",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:ci": "yarn test -- --coverage"
  },
  "keywords": [],
  "author": "Daniel Rodrigues <munizbarreto5@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "2.7.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.6",
    "pg": "^8.6.0",
    "typeorm": "^0.2.34"
  },
  "lint-staged":{
    "*.{ts,tsx}": [
      "eslint 'src/**' --fix",
      "yarn test"
    ]
  }
